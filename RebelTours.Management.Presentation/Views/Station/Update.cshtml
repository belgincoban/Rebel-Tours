@model StationDTO
    <h1 class="pb-3 mb-3 border-bottom">
        İstasyon Güncelle
    </h1>
<div class="row">
    <div class="col-12 col-md-8 col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label asp-for="Name">İstasyon Adı</label>
                <input type="text" asp-for="Name" class="form-control" value="@Model.Name" />
            </div>

            <div class="mb-3"> 
                <label asp-for="CityId">Şehir</label>
                <select asp-for="CityId" asp-items="ViewBag.Cities" class="form-control"></select>
            </div>
            <div class="mb-3 float-right">
                <button type="submit" class="btn btn-success">
                    Kaydet
                </button>
                <a class="btn btn-secondary" asp-controller="Station" asp-action="Index">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
