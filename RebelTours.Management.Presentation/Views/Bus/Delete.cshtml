@model BusDTO

<h1 class="p-3 mb-3 border-bottom">
    Otobüs Sil
</h1>

@if (ViewBag.CommandResult != null)
{
    var result = (CommandResult)ViewBag.CommandResult;

    <div class="row">
        <div class="col-12 col-sm-8 col-md-6">
            <div class="alert @(result.IsSucceeded ? "alert-success" : "alert-danger")">
                @(result.Messages.Any() ? result.Messages.First() : "Hata")
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-12 col-md-8 col-sm-4">
        <div class="alert alert-warning">
            <label>Dikkat!!! Silmek istediğine emin misin?</label>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12 col-md-8 col-sm-6">
        <form method="post" asp-action="Delete" asp-controller="Bus">
            <input type="hidden" asp-for="BusId" />

            <div class="mb-3">
                <label>Id</label>
                <input asp-for="BusId" class="form-control" type="text" autocomplete="off" disabled />

            </div>
            <div class="mb-3">
                <label>Model Adı</label>
                <input value="@ViewBag.BusModel" class="form-control" type="text" autocomplete="off" disabled />
            </div>
            <div class="mb-3">
                <label asp-for="RegistrationPlate">Plaka</label>
                <input asp-for="RegistrationPlate" class="form-control" type="text" autocomplete="off" disabled />

            </div>

            <div class="float-right">
                <button type="submit" class="btn btn-warning">
                    Onayla
                </button>
                <a class="btn btn-success" asp-action="Index" asp-controller="Bus">
                    İptal
                </a>
            </div>
        </form>
    </div>
</div>
